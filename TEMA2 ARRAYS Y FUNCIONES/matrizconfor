<?php 
$array=array("primavera","verano","otoÃ±o","invierno");
for($i=0;$i<count($array);$i++){ // por cada estacion muestrame una linea con dos td
	echo "<tr>";
	echo "<td> $i </td>";
	echo "<td> $array[$i] </td>";
	echo "</tr>";
}
?>
</table>
